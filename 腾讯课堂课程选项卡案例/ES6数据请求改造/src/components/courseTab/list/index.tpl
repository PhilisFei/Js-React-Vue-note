<li class="card-item">
    <a href="https://ke.qq.com/course/{{id}}" target="_blank" class="card-lk">
        <img src="{{img}}" alt="{{courseName}}" />
    </a>
    <div class="item-status">
        <span class="item-status-step">随到随学</span>
    </div>
    <h4 class="item-tt">
        <a href="https://ke.qq.com/course/{{id}}" class="tt-lk">{{courseName}}</a>
    </h4>
    <div class="item-line">
        <span class="line-cell {{priceStyle}}">{{price}}</span>
    </div>    
</li>